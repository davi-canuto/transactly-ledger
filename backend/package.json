{
  "name": "transactly-ledger",
  "version": "1.0.0",
  "description": "A simple banking system with double-entry ledger using GraphQL and Relay",
  "type": "module",
  "main": "dist/src/server.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/src/server.js",
    "dev": "node --loader ts-node/esm src/server.ts",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "graphql",
    "relay",
    "banking",
    "ledger",
    "mongodb"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@koa/router": "^12.0.1",
    "dotenv": "^16.3.1",
    "graphql": "^16.8.1",
    "graphql-helix": "^1.13.0",
    "graphql-relay": "^0.10.0",
    "koa": "^2.14.2",
    "koa-bodyparser": "^4.4.1",
    "koa-cors": "^0.0.16",
    "mongoose": "^7.6.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/koa": "^3.0.0",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa-cors": "^0.0.6",
    "@types/mongoose": "^5.11.96",
    "@types/node": "^24.2.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.6.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "jest": {
    "testEnvironment": "node",
    "preset": "ts-jest/presets/default-esm",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapping": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ]
  }
}
